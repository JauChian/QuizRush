<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    android:padding="20dp"
    android:layout_gravity="center"
    tools:context=".NewQuiz">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icn_back"/>

    <TextView
        style="@style/FontStyleXL"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Quiz"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        style="@style/FontStyleM"
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Name:"/>

    <EditText
        android:id="@+id/quiz_name"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:hint="Quiz Name"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFFFFF"/>

    <TextView
        android:id="@+id/tv_cat"
        style="@style/FontStyleM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:gravity="start" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginBottom="10dp"
        android:entries="@array/category_options"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_difficulty"
        style="@style/FontStyleM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        android:gravity="start" />

    <Spinner
        android:id="@+id/difficulty_spinner"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginBottom="10dp"
        android:entries="@array/difficulty_options"
        android:textColor="#FFFFFF" />
    <TextView
        style="@style/FontStyleM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date:"/>
    <EditText
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:hint="Start Date"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="date"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFFFFF"/>
    <TextView
        style="@style/FontStyleM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date:"/>
    <EditText
        android:id="@+id/end_date"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:hint="End Date"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="date"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFFFFF"/>

    <TextView
        style="@style/FontStyleBlackL"
        android:id="@+id/load_new_question_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate New Questions"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/green_button"
        android:layout_marginBottom="10dp"/>

    <TextView
        style="@style/FontStyleBlackL"
        android:id="@+id/add_new_quiz_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Quiz"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/green_button"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
