<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    android:background="@drawable/green_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/FontStyleBlackXL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Quiz name:" />
        <ImageView
            android:id="@+id/btn_like_or_not"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:src="@drawable/icn_not_like"
            android:contentDescription="not_like" />
        <TextView
            android:id="@+id/tv_like_num"
            style="@style/FontStylePinkM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="25" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icn_edit"/>
        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icn_delete"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_difficulty"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        style="@style/FontStyleBlackM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Difficlutly:" />

    <TextView
        android:id="@+id/tv_start_date"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        style="@style/FontStyleBlackM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Start Date:" />

    <TextView
        android:id="@+id/tv_end_date"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        style="@style/FontStyleBlackM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="End Date:" />


</LinearLayout>