<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pic_background"
    tools:context=".QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:background="#000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icn_back"/>
            <TextView
                android:layout_marginTop="20dp"
                style="@style/FontStyleXL"
                android:id="@+id/question_title"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Question 1"
                android:layout_marginBottom="32dp"/>
            <ImageView
                android:id="@+id/esc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icn_esc"/>

        </LinearLayout>

        <TextView
            style="@style/FontStyleL"
            android:id="@+id/question"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question: !@3123113 "
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <RadioGroup
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/answersGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RadioButton
                style="@style/FontStyleM"
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 1" />

            <RadioButton
                style="@style/FontStyleM"
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 2" />

            <RadioButton
                style="@style/FontStyleM"
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 3" />

            <RadioButton
                style="@style/FontStyleM"
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 4" />
        </RadioGroup>

        <TextView
            android:layout_margin="20dp"
            style="@style/FontStyleBlackL"
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Question"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/green_button"
            android:layout_marginBottom="16dp"/>




    </LinearLayout>



</LinearLayout>